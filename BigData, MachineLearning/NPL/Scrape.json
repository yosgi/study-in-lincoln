          "id": "GPt5o7l4yd2y"
        },
        "outputs": [],
        "source": [
          "url = \"https://nz.yahoo.com/news/no-donald-trump-isn-t-195944759.html\"\n",
          "r = requests.get(url)\n",
          "soup = BeautifulSoup(r.text, 'html.parser')\n",
          "paragraphs = soup.find_all('p')"
        ]
      },
      {
        "cell_type": "code",
        "execution_count": null,
        "metadata": {
          "id": "q8n10FaFyd2z"
        },
        "outputs": [],
        "source": [
          "paragraphs[0].text"
        ]
      },
      {
        "cell_type": "code",
        "execution_count": 9,
        "metadata": {
          "id": "w0LINDvxyd20"
        },
        "outputs": [],
        "source": [
          "text = [paragraph.text for paragraph in paragraphs]\n",
          "words = ' '.join(text).split(' ')[:400]\n",
          "ARTICLE = ' '.join(words)"
        ]
      },
      {
        "cell_type": "code",
        "execution_count": null,
        "metadata": {
          "id": "t8euROXcyd22"
        },
        "outputs": [],
        "source": [
          "ARTICLE"
        ]
      },
      {
        "cell_type": "code",
        "execution_count": 11,
        "metadata": {
          "id": "EAzToIZxyd23"
        },
        "outputs": [],
        "source": [
          "input_ids = tokenizer.encode(ARTICLE, return_tensors='pt')\n",
          "output = model.generate(input_ids, max_length=55, num_beams=5, early_stopping=True)\n",
          "summary = tokenizer.decode(output[0], skip_special_tokens=True)"
        ]
